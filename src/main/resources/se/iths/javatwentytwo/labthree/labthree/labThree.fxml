<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.iths.javatwentytwo.labthree.labthree.controller.ArtistController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem mnemonicParsing="false" text="New....">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="Save">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="Open">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                     <accelerator>
                        <KeyCodeCombination alt="DOWN" code="F" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                        <MenuItem mnemonicParsing="false" text="Undo">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="Z" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <ToolBar>
              <items>
                <Button fx:id="rectangleButton" alignment="CENTER" mnemonicParsing="false" prefWidth="55.0">
                     <graphic>
                        <ImageView fitHeight="26.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/rectangle.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Button fx:id="circleButton" alignment="CENTER" mnemonicParsing="false" prefWidth="55.0">
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/circle.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Button fx:id="triangleButton" alignment="CENTER" mnemonicParsing="false" prefWidth="55.0">
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/triangle.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Button fx:id="lineButton" alignment="CENTER" mnemonicParsing="false" prefWidth="55.0">
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@images/line.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <ColorPicker fx:id="colorPick" />
                  <Spinner fx:id="sizeSpinner" editable="true" initialValue="20" max="100" min="0" prefWidth="70.0" />
              </items>
            </ToolBar>
         </children>
      </VBox>
   </top>
   <right>
      <VBox prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Chat" textAlignment="CENTER" underline="true">
               <font>
                  <Font name="System Bold Italic" size="22.0" />
               </font>
            </Label>
            <ListView fx:id="outputChatText" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
            <HBox>
               <children>
                  <TextArea fx:id="textToChatField" prefHeight="39.0" prefWidth="135.0" />
                  <Button fx:id="sendButtonTextField" mnemonicParsing="false" prefWidth="50.0" text="Send">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </right>
   <center>
      <Canvas fx:id="canvas" height="535.0" onMouseClicked="#canvasClicked" width="820.0" BorderPane.alignment="TOP_LEFT" />
   </center>
</BorderPane>
